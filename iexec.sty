\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{iexec}[00.00.0000 0.0.0 Inputable Shell Executions]

\makeatletter\newcommand\exec[1]{%
  \begingroup%
  \let\%\@percentchar%
  \let\{\@charlb%
  \let\}\@charrb%
  \ShellEscape{#1}%
  \endgroup%
}\makeatother

\newcommand\iexec[1]{%
  \exec{#1 > iexec.tmp}%
  \exec{echo >> iexec.tmp}%
  \input{iexec.tmp}\unskip%
  \exec{rm iexec.tmp}%
}\makeatother

\endinput
